{
    "name": "dorkysearch/web-app",
    "description": "DorkySearch - Advanced Domain Analysis Tool",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-pdo": "*",
        "phpwhois/phpwhois": "^4.2",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.3",
        "monolog/monolog": "^2.0",
        "respect/validation": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "DorkySearch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DorkySearch\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable"
} 